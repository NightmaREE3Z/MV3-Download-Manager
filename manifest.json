{
  "name": "MV3 Download Manager",
  "short_name": "MV3DLManager",
  "version": "3.0",
  "manifest_version": 3,
  "description": "A clean and modern download manager for your everyday download tasks.",
  "background": {
    "service_worker": "js/background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "popup.html",
    "default_title": "Downloads"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "downloads",
    "downloads.open",
    "downloads.shelf",
    "storage"
  ],
  "host_permissions": ["*://*/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/gizmo.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icons/icon16.png",
        "icons/icon_download_in_progress.png",
        "icons/icon_download_finished.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
